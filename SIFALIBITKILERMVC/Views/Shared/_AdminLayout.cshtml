<!DOCTYPE html>
<html lang="tr">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Şifalı Bitkiler Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <div class="text-center">

                    <img src="/PlantsPhoto/user.png" class="rounded mx-auto img-fluid" width="200" height="200">

                </div>

                <p class="lead text-center mt-2"><b>Yönetici Paneli</b></p>

            </div>       <div class="list-group list-group-flush">
                <a href="~/AddPlant/AddPlantIndex" class="list-group-item list-group-item-action bg-light">Yeni Bitki Ekle</a>
                <a href="~/ReadPlants/IndexList" class="list-group-item list-group-item-action bg-light">Bitkileri Görüntüler</a>
                <a href="~/ReadVisitMessages/ReadVisitMessagesIndex" class="list-group-item list-group-item-action bg-light">Ziyaretçi Mesajlarını Görüntüle</a>
            </div>
        </div>
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <i class="btn btn-primary fa-solid fa-circle-right" id="menu-toggle"></i>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Ayarlar
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a data-toggle="modal" href="#exampleModal" id="adminPP" class="dropdown-item">Bilgilerimi Güncelle</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/Panelim/LoginOut">Çıkış Yap</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>



    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hesap Bilgilerim</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modalBody">
                    <input class="form-control mt-2 mb-2" id="UserName" name="UserName" placeholder="Kullanıcı Adınızı Giriniz" value="@Session["USERNAME"]" />
                    <input type="password" class="form-control mt-2 mb-2" id="Password" name="Password" placeholder="Eski Parolanızı Giriniz" />
                    <input type="password" class="form-control mt-2 mb-2" id="NewPassword1" name="NewPassword" placeholder="Yeni Parolanızı Giriniz" />
                    <input type="password" class="form-control mt-2 mb-2" id="NewPassword2" name="" placeholder="Yeni Parolanızı Tekrar Giriniz" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="button" id="btnSendAdminPP" class="btn btn-primary">Bilgilerimi Güncelle</button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

    <script>
        $(document).ready(() => {
            $("#wrapper").toggleClass("toggled");

            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");

                let acikMenu = $(e.target).attr("class");
                if (acikMenu == "btn btn-primary fa-solid fa-circle-right") {
                    $("#menu-toggle").removeClass();
                    $("#menu-toggle").addClass("fa-solid fa-xmark btn btn-danger");


                }
                else {
                    $("#menu-toggle").removeClass();
                    $("#menu-toggle").addClass("btn btn-primary fa-solid fa-circle-right");


                }
            });

            let createAlert = (alertClass, alertMessage) => {
                let createAlertDiv = `
                            <div class="alert ${alertClass}">
                              ${alertMessage}
                            </div>
                         `
                $("#modalBody").append(createAlertDiv);
                $("#btnSendAdminPP").hide(750);
                setTimeout(() => {
                    $("." + alertClass).hide(750);
                    $("#btnSendAdminPP").show(750);

                }, 2500);


            };

            $("#btnSendAdminPP").click(() => {
                let _UserName = $("#UserName").val();
                let _Password = $("#Password").val();
                let _NewPassword1 = $("#NewPassword1").val();
                let _NewPassword2 = $("#NewPassword2").val();

                let requestData = {
                    UserName: _UserName,
                    Password: _Password,
                    NewPassword1: _NewPassword1
                };

                if (_NewPassword1 == _NewPassword2) {
                    $.ajax({
                        url: "/AdminProfile/AdminProfileIndex",
                        type: "POST",
                        data: JSON.stringify(requestData),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.response == "updateSuccess") {
                                createAlert("alert-success", "Bilgeriniz Başarılıyla Güncellendi !");
                            }
                            if (data.response == "updateError") {
                                createAlert("alert-danger", "Hatalı Bilgi !");
                            }
                        },
                    });
                }
                else {
                    createAlert("alert-warning", "Oluşturucağınız Şifreler Birbiri İle Aynı Olmalıdır !");
                }

            });





        });
    </script>

</body>

</html>
